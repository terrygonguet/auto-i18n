{
	"name": "@terrygonguet/auto-i18n",
	"version": "0.0.1",
	"license": "MIT",
	"scripts": {
		"dev": "vite dev",
		"build": "vite build && npm run prepack",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"prepack": "svelte-kit sync && svelte-package && publint",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check ."
	},
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"sideEffects": [
		"**/*.css"
	],
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./editor": {
			"types": "./dist/editor.svelte.d.ts",
			"svelte": "./dist/editor.svelte.js"
		},
		"./server": {
			"types": "./dist/server.d.ts",
			"svelte": "./dist/server.js"
		},
		"./I18NEditorDialog.svelte": {
			"types": "./dist/I18NEditorDialog.svelte.d.ts",
			"svelte": "./dist/I18NEditorDialog.svelte"
		}
	},
	"peerDependencies": {
		"@sveltejs/kit": "^2.16.0",
		"svelte": "^5.0.0"
	},
	"devDependencies": {
		"@rollup/pluginutils": "^5.1.4",
		"@sveltejs/adapter-auto": "^4.0.0",
		"@sveltejs/package": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/typography": "^0.5.15",
		"@tailwindcss/vite": "^4.0.0",
		"@types/better-sqlite3": "^7.6.12",
		"drizzle-kit": "^0.30.2",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"publint": "^0.3.2",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.8.3",
		"vite": "^6.2.5"
	},
	"dependencies": {
		"@terrygonguet/utils": "^0.7.1",
		"better-sqlite3": "^11.8.0",
		"drizzle-orm": "^0.40.0",
		"marked": "^15.0.11"
	},
	"keywords": [
		"svelte",
		"i18n"
	],
	"author": {
		"email": "terry@gonguet.com",
		"name": "Terry Gonguet",
		"url": "https://terry.gonguet.com/"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/terrygonguet/auto-i18n.git"
	},
	"bugs": {
		"url": "https://github.com/terrygonguet/auto-i18n/issues"
	}
}
